<!DOCTYPE html>
<html lang="ES">

<%- include('../partials/head',{ title : 'Login' }) %>


	<body>
    <%- include('../partials/header') %>
	<main class="login-register-container">
		<section class="logo-section">
		  <img
			src="../images/logo (1).jpg"
			style="width: 350px; height: 350px;"
			class="logo"
		  />
		</section>
		<section class="form-section">
		  <div class="card shadow">
			<div class="card-header">
			  <h4 class="card-title">Login de usuario</h4>
			</div>
			<div class="card-body">
			  <form action="" class="custom-form" method="POST">
				<div class="form-group">
				  <label for="email" class="form-label">Correo electrónico</label>
				  <input
					type="email"
					name="email"
					class="form-control"
					id="email"
					placeholder="ando@mateando.com"
				  />
				  <small class="error-message"
					><%= locals.errors && errors.email ? errors.email.msg : null %></small
				  >
				</div>
				<div class="form-group">
				  <label for="password" class="form-label">Contraseña</label>
				  <input
					type="password"
					name="password"
					class="form-control"
					id="password"
				  />
				  <small class="error-message"
					><%= locals.errors && errors.password ? errors.password.msg : null %></small
				  >
				</div>
				<div class="form-group form-check">
				  <input
					class="form-check-input"
					type="checkbox"
					value="1"
					id="remember"
					name="remember"
				  />
				  <label class="form-check-label" for="remember">Recordarme</label>
				</div>
				<div class="form-group">
				  <button class="custom-btn">Ingresar</button>
				</div>
				<div class="form-group">
					<p class="text-center">
					  ¿Aún no estás registrado? <a href="/usuarios/registro">Regístrate</a>.
					</p>
				  </div>
			  </form>
			</div>
		  </div>
		</section>
	  </main>
	  
    <%- include('../partials/footer') %>

	</body>

</html>