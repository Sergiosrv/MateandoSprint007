<!DOCTYPE html>
<html lang="ES">
<%- include('../partials/head',{ title : 'Registro' }) %>

  <body>

    <%- include('../partials/header') %>

    <main class="main-container">
       <!-- Agregamos el div del logo  -->
       <section class="logo-section-register">
        <img
        src="../images/logo (1).jpg"
        style="width: 400px; height: 400px;"
        class="logo"
        />
      </section>
      <section class="form-section-register">
        <div class="card-shadow">
         
          <div class="card-header-register">
            <h4 class="card-title">Registro de usuario</h4>
          </div>
          <div class="card-body">
            <form action="" class="main-form" method="POST" id="form-register">
              <div class="col-12">
                <div class="alert alert-danger" id="msg-error" hidden>
                  Todos los campos son obligatorios
                </div>
              </div>
              <div class="form-group">
                <label for="name" class="form-label">Nombre</label>
                <input type="text" name="name" class="form-control <%= locals.errors && errors.name ? 'is-invalid' : '' %>" id="name" value="<%= locals.old && old.name ? old.name : '' %>" />
                <small class="error-message" id="error-name">
                  <%= locals.errors && errors.name ? errors.name.msg : '' %>
                </small>
              </div>
              <div class="form-group">
                <label for="surname" class="form-label">Apellido</label>
                <input type="text" name="surname" class="form-control <%= locals.errors && errors.surname ? 'is-invalid' : '' %>" id="surname" value="<%= locals.old && old.surname ? old.surname : '' %>" />
                <small class="error-message" id="error-surname">
                  <%= locals.errors && errors.surname ? errors.surname.msg : '' %>
                </small>
              </div>
              <div class="form-group">
                <label for="email" class="form-label">Correo electrónico</label>
                <input type="email" name="email" class="form-control <%= locals.errors && errors.email ? 'is-invalid' : '' %>" id="email" placeholder="ando@mateando.com" value="<%= locals.old && old.email ? old.email : '' %>" />
                <small class="error-message" id="error-email">
                  <%= locals.errors && errors.email ? errors.email.msg : '' %>
                </small>
              </div>
              <div class="form-group">
                <label for="password" class="form-label">Contraseña</label>
                <input type="password" name="password" class="form-control <%= locals.errors && errors.password ? 'is-invalid' : '' %>" id="password" />
                <small class="error-message">
                  <%= locals.errors && errors.password ? errors.password.msg : '' %>
                </small>
              </div>
              <div class="form-group">
                <label for="password2" class="form-label">Confirmar contraseña</label>
                <input type="password" name="password2" class="form-control <%= locals.errors && errors.password2 ? 'is-invalid' : '' %>" id="password2" />
                <small class="error-message">
                  <%= locals.errors && errors.password2 ? errors.password2.msg : '' %>
                </small>
              </div>
              <div class="form-group">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="1" id="remember" name="remember" />
                  <label class="form-check-label" for="remember">
                    Acepto <a href="/terminos-y-condiciones" target="_blank" class="form-link" data-bs-toggle="modal" data-bs-target="#exampleModal">términos y condiciones</a>
                  </label>
                </div>
                <small class="error-message">
                  <%= locals.errors && errors.remember ? errors.remember.msg : '' %>
                </small>
              </div>
              <div class="form-group">
                <button class="main-btn">Registrate</button>
              </div>
            </form>
          </div>
        </div>
        
      </section>
    </main>
    <%- include('../partials/footer') %>

    <script src="/js/registerValidator.js"></script>
  </body>

</html>
